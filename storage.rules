rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Firebase Functionsからの書き込みを許可
    match /qr-codes/{type}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // メニュー画像の読み取りを許可
    match /menuImages/{fileName} {
      allow read: if true; // 誰でも読み取り可能
      allow write: if request.auth != null; // 認証済みユーザーのみ書き込み
    }
    
    // その他のファイルは読み書き禁止
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

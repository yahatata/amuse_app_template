rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Firebase Functionsからの書き込みを許可
    match /qr-codes/{type}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // その他のファイルは読み書き禁止
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
